@code {
    int baseColor;
    int saturation;
    int lightness;
    Random randy = new Random();

    protected override void OnInitialized()
    {
        newColors();
    }

    public void newColors ()
    {
        baseColor = randy.Next(0, 360);
        saturation = randy.Next(14, 22);
        lightness = randy.Next(88, 96);
